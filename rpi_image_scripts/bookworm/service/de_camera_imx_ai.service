[Unit]
Description=Drone Engage Camera with Initialization of rpicamera-vid pipeline Ver 2.0
After=network.target multi-user.target
Documentation=https://droneengage.com


[Service]
Type=simple
WorkingDirectory=/home/pi/
ExecStart=/home/pi/scripts/wrapper/camera_manager_wrapper -c -t  "/home/pi/rpicam-apps/assets/imx500_mobilenet_ssd.json"
Restart=on-failure
RestartSec=5s

StandardOutput=journal
StandardError=journal
SyslogIdentifier=camera_wrapper

# You might need to adjust user/group if camera access is restricted
# User=pi
# Group=video

[Install]
WantedBy=multi-user.target

